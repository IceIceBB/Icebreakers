<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lmont.iceicebb">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.lmont.iceicebb.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/Splashscreen"
            android:screenOrientation="portrait"
            android:noHistory="true" >


            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameActivity"
            android:label="@string/app_name">


        </activity>
        <activity android:name=".GameDetailActivity" />
        <activity android:name=".ToolsActivity" />
        <activity android:name=".CardsActivity" />
        <activity android:name=".DiceActivity" />
        <activity android:name=".FeelingLuckyActivity"></activity>

    </application>

</manifest>