<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#587e7c"
    tools:context="com.example.lmont.iceicebb.Fragments.ToolsFragment">


    <Button
        android:id="@+id/cardToolButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_weight="8"
        android:background="@drawable/playing_cards_icon"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"/>


    <Button
        android:id="@+id/diceToolButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="@drawable/dice_icon"
        android:elevation="2dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="201dp"
        android:id="@+id/card_background"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="@+id/diceToolButton"
        app:layout_constraintTop_toTopOf="@+id/diceToolButton"
        app:layout_constraintVertical_bias="0.52"/>
    <TextView
        android:layout_width="180dp"
        android:layout_height="201dp"
        android:id="@+id/dice_background"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintBottom_toBottomOf="@+id/diceToolButton"
        app:layout_constraintTop_toTopOf="@+id/diceToolButton"
        app:layout_constraintVertical_bias="0.52"/>
</android.support.constraint.ConstraintLayout>
