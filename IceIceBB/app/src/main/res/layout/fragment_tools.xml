<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="#587e7c"
                                             tools:context="com.example.lmont.iceicebb.Fragments.ToolsFragment">


    <Button
        android:id="@+id/cardToolButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/playing_cards_icon"
        android:elevation="2dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        />

    <Button
        android:id="@+id/diceToolButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/dice_icon"
        android:elevation="2dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"/>
</android.support.constraint.ConstraintLayout>
