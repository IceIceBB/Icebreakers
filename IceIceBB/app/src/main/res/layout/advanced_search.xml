<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Advanced Search"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/advanced_search_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:background="@android:color/holo_blue_light"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:padding="@dimen/small_spacing"
        android:gravity="center"/>

    <EditText
        android:id="@+id/advanced_search_tag_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tags"
        android:background="@android:color/holo_blue_light"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:padding="@dimen/small_spacing"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Options:"
        android:textSize="20dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1">

        <CheckBox
            android:id="@+id/advanced_search_isclean_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clean" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Sort By:"
        android:textSize="20dp"
        android:gravity="center"/>

    <RadioGroup
        android:id="@+id/andvanced_search_sortby_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RadioButton
            android:id="@+id/advanced_search_rating_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textColor="#9b000000"/>

        <RadioButton
            android:id="@+id/advanced_search_alphabetical_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alphabetical"
            android:textColor="#9b000000"/>

    </RadioGroup>

</LinearLayout>